<div class="panel panel-default items">
  <table class="table table-bordered">
    <thead>
      <tr>
        <th colspan="2">Product</th>
        <th>Unit Price</th>
        <th>Quantity</th>
        <th>Price</th>
      </tr>
    </thead>
    <tbody>
      <% @line_items.each do |line_item| %>
        <tr>
          <td>
            <%= image_tag line_item.product.image.tiny.url %>
          </td>
          <td>
            <h4><%= line_item.product.name %></h4>
            <p><%= line_item.product.description %></p>
          </td>
          <td>
            <%= humanized_money_with_symbol(line_item.product.price) %>
          </td>
          <td>
            <%= line_item.quantity %>
          </td>
          <td>
            <%= humanized_money_with_symbol(line_item.total_price) %>
          </td>
        </tr>
      <% end %>
    </tbody>
    <tfoot>
      <tr>
        <th colspan="4">
          TOTAL:
        </th>
        <th>
          <%= humanized_money_with_symbol(@final_amount) %>
        </th>
      </tr>
    </tfoot>
    <tfoot>
    <tr>
      <th colspan="5">
        User's Email: <%= @order.email %>
      </th>
    </tr>
  </tfoot>
  </table>
</div>